<dataConfig>
	<dataSource type="JdbcDataSource" driver="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost/gluedb" user="glue" password="glue" />
	<document name="streams">
		<entity name="stream" query="select * from STREAM">
			<entity name="venue"
				query="select * from VENUE where ID='${stream.VENUE_ID}'">
			</entity>
			<entity name="media"
				query="select CAPTION from MEDIA where STREAM_ID='${stream.ID}'">
			</entity>
		</entity>
	</document>
</dataConfig>

